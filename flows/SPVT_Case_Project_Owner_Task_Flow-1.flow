        <expression>CASE(MOD(DATEVALUE({!case.CreatedDate})- DATE(1900, 1, 7), 7), 
	0, DATEVALUE({!case.CreatedDate})+3, 
	1, DATEVALUE({!case.CreatedDate})+3, 
	2, DATEVALUE({!case.CreatedDate})+3,
	3, DATEVALUE({!case.CreatedDate})+5, 
	4, DATEVALUE({!case.CreatedDate})+5, 
	5, DATEVALUE({!case.CreatedDate})+5, 
	6, DATEVALUE({!case.CreatedDate})+4,
	null)</expression>
    </formulas>
    <formulas>
