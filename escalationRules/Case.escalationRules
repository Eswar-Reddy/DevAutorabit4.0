                <operation>contains</operation>
                <value>queue</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Type</field>
                <operation>equals</operation>
                <value>Tech Support - General,Tech Support - Incident,Site Audit,Field Failure</value>
            </criteriaItems>
            <escalationAction>
                <minutesToEscalation>7200</minutesToEscalation>
