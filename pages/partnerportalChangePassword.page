<apex:page showHeader="false" sidebar="false" controller="PartnerPortalForgotPasswordController" >
    <apex:stylesheet value="{!$Resource.PartnerPortalSiteLoginCSS}" />
    <apex:form id="pploginForm" >

        <div class="webHeaderContainer" id="headerWebId">
            <div class="webHeader"><img width="200" height="25" alt="SunPower More Energy. For Life." src="{!$Resource.SunPower_Logo_2015}"/>
            </div>
        </div>
        <hr size="1" />
        
        <div id="mainSection" class="">
            <div id="signInFormSection" class="pageSection">
                <div class="headerSection"><h1>{!portalLoginHeader}</h1></div>
                
                <div>
                    <apex:panelGrid columns="2" style="margin-top:1em;">
                      <apex:outputLabel rendered="{! !$Site.IsPasswordExpired}" value="{!$Label.site.old_password}" for="oldpsw"/>
                      <apex:inputSecret required="true" id="oldpsw" rendered="{! !$Site.IsPasswordExpired}" value="{!oldPassword}"/>
                      <apex:outputLabel value="{!$Label.site.new_password}" for="psw"/>
                      <apex:inputSecret required="true" id="psw" value="{!newPassword}"/>
                      <apex:outputLabel value="{!$Label.site.verify_new_password}" for="vpsw"/>
                      <apex:inputSecret required="true" id="vpsw" value="{!verifyNewPassword}"/>
                      <apex:outputText value=""/>
                      <apex:commandButton id="cpwbtn" action="{!changePassword}" value="{!$Label.site.change_password}" style="background: none repeat scroll 0 0 #5496CC; border: medium none; color: #fff; cursor: pointer;display: inline-block; font: 0.9em Arial,Helvetica,sans-serif; margin: 15px 0 20px; padding: 8px 20px; position: relative;"/>
                    </apex:panelGrid> 
                </div>
            </div>
        </div>
        
    </apex:form>
</apex:page>