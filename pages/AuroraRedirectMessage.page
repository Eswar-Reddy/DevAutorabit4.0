<apex:page controller="AuroraRedirectMessageController" showHeader="{!NOT(isPartnerUser)}" sidebar="{!NOT(isPartnerUser)}" standardStylesheets="{!NOT(isPartnerUser)}">
    <apex:outputPanel rendered="{!NOT(isPartnerUser)}">
        <apex:pageMessages >
        </apex:pageMessages>
    </apex:outputPanel>
    <apex:outputPanel rendered="{!isPartnerUser}">
        <!-- Load stylesheets first -->
        <c:SPCommunityAppResources_CSS />
        <c:CommunitiesMainNavComponent activeTab="Opportunities"/>
        <body class="sunpower-style container-fluid" style="max-width: 1250px;">
            <div class="row">
                <div class="col-xs-12">
                    <div class="alert alert--danger">
                        <span>{!message}</span>
                    </div>
                </div>
            </div>
        </body>
        <!-- Load JS Scripts Last -->
        <c:SPCommunityAppResources_JS />
    </apex:outputPanel>
</apex:page>