<apex:page sidebar="false" showHeader="false" controller="PartnerPortalForgotPasswordController">
    
    <apex:stylesheet value="{!$Resource.PartnerPortalSiteLoginCSS}"/>
    
    <apex:form id="pploginForm" >
        
        <div class="webHeaderContainer" id="headerWebId">
            <div class="webHeader"><img width="200" height="25" alt="SunPower More Energy. For Life." src="{!$Resource.SunPower_Logo_2015}"/>
            </div>
        </div>
        <hr size="1" />
        
        <div>
            <apex:outputPanel id="langSelPanel" style="float:right;" >
                <apex:outputLink value="/apex/partnerportallogin" style="color: #5496CC;font: .9em Arial,Helvetica,sans-serif;text-decoration:underline;" >{!backtoLogin}</apex:outputLink>
            </apex:outputPanel>
        </div>
        
        <div id="mainSection" class="">
            <div id="signInFormSection" class="pageSection">
                <div class="headerSection"><h1>{!portalLoginHeader}</h1></div>
                <div>
                    <apex:panelGroup >
                              <br/>
                              <br/>
                              
                                  <apex:outputText value="{!$Label.site.enter_password}"/>
                              
                              
                    <apex:pageMessages id="error"/>
                    <apex:panelGrid columns="2" style="margin-top:1em;" cellspacing="4" cellpadding="4">
                      <apex:outputLabel value="{!$Label.site.username}" for="username"/>
                      <apex:inputText id="username" value="{!username}"/>
                      <apex:outputText value=""/>
                      <apex:commandButton id="submit" value="{!$Label.site.submit}" action="{!forgotPassword}" style="background: none repeat scroll 0 0 #5496CC; border: medium none; color: #fff; cursor: pointer;display: inline-block; font: 0.9em Arial,Helvetica,sans-serif; margin: 15px 0 20px; padding: 8px 20px; position: relative;"/>
                    </apex:panelGrid> 
                                     
                  <br/>
                </apex:panelGroup>
                </div>
            </div>
        </div>
        <!--
        <br/>
        <apex:outputPanel >Browser Language is {!usrLangCode}</apex:outputPanel>
        <br/>
        <apex:outputPanel >Language is {!languageSelected}</apex:outputPanel>-->
    </apex:form>
</apex:page>