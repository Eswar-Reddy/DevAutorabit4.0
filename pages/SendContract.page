<apex:page Controller="SendContractController" tabStyle="echosign_dev1__SIGN_Agreement__c">
  <apex:sectionHeader title="Send Contract"/>
  <apex:pagemessages />
  <apex:Form id="form1">
  <apex:pageBlock id="block1">
   <apex:pageBlockButtons id="blockbutton">
        <apex:commandButton value="Proceed"  action="{!proceed}"/>
        <apex:commandButton value="Cancel" action="{!cancel}" />
   </apex:pageBlockButtons> 
   
    <apex:pageBlockSection id="section1" title="General" columns="1">
       <apex:pageBlockSectionItem >
            <apex:outputLabel for="name">Account Name</apex:outputLabel>
            <apex:outputLabel id="name" value="{!acc.Name}"></apex:outputLabel>
       </apex:pageBlockSectionItem>
       
        <apex:pageBlockSectionItem >
            <apex:outputLabel for="ContractType">Contract Type</apex:outputLabel>
            <apex:outputLabel id="ContractType" value="{!contract.Contract_Type__c}"></apex:outputLabel>
        </apex:pageBlockSectionItem>      
                       
       <apex:pageBlockSectionItem >
            <apex:outputLabel for="conNumber">Contract Number</apex:outputLabel>
            <apex:outputLabel id="conNumber" value="{!contract.ContractNumber}"></apex:outputLabel>
       </apex:pageBlockSectionItem>
       
        <apex:pageBlockSectionItem >
            <apex:outputLabel for="msg">e-Signature Message</apex:outputLabel>
            <apex:inputTextArea id="msg" value="{!message}" cols="70" rows="3"></apex:inputTextArea>
        </apex:pageBlockSectionItem>      
        
    </apex:pageBlockSection>
    
    <apex:pageBlockSection id="section2" title="Partner" columns="1">
    
        <apex:pageBlockSectionItem > 
            <apex:outputLabel for="rec1">Recipient 1</apex:outputLabel>
            <apex:selectList value="{!recipient1}" size="1" id="rec1" style="width:220px">
                <apex:selectOptions value="{!optionsRecipientWithRole}" />
           </apex:selectList>
        </apex:pageBlockSectionItem>                
        <apex:pageBlockSectionItem > 
            <apex:outputLabel for="rec2">Recipient 2</apex:outputLabel>
            <apex:selectList value="{!recipient2}" size="1" id="rec2" style="width:220px">
                <apex:selectOptions value="{!optionsRecipientWithRole}" />
           </apex:selectList>
        </apex:pageBlockSectionItem>                
        <apex:pageBlockSectionItem > 
            <apex:outputLabel for="rec3">Recipient 3</apex:outputLabel>
            <apex:selectList value="{!recipient3}" size="1" id="rec3" style="width:220px">
                <apex:selectOptions value="{!optionsRecipientWithRole}" />
           </apex:selectList>
        </apex:pageBlockSectionItem>                        
    </apex:pageBlockSection>
    <apex:pageBlockSection id="section3" title="SunPower" columns="1">
        <apex:pageBlockSectionItem >
            <apex:outputLabel >The following SunPower Executive will counter-sign the contract: </apex:outputLabel>
        </apex:pageBlockSectionItem>  
        <!-- 
        <apex:pageBlockSectionItem >
            <apex:outputLabel for="ContractType">SunPower Executive</apex:outputLabel>
            <apex:outputLabel id="ContractType" value="{!Territory_SunPower}"></apex:outputLabel>
        </apex:pageBlockSectionItem>  
         <apex:pageBlockSectionItem >
            <apex:outputLabel for="ContractType">SunPower Executive Email</apex:outputLabel>
            <apex:outputLabel id="ContractType" value="{!Territory_SunPower_Executive_Email}"></apex:outputLabel>
        </apex:pageBlockSectionItem>         
            
        <apex:pageBlockSectionItem >
            <apex:outputLabel for="newemail" style="wrap:nowrap">New SunPower Executive Email</apex:outputLabel>
            <apex:inputText id="newemail" value="{!SunPower_Executive_Email_Updated}"></apex:inputText>
        </apex:pageBlockSectionItem>          
    -->
     <apex:pageBlockSectionItem >
     	<apex:outputLabel for="ContractType">SunPower Executive</apex:outputLabel>
     	<apex:inputField value="{!tempContract.SunPower_Executive__c}" id="ContractType"/>
     	
     </apex:pageBlockSectionItem>
    </apex:pageBlockSection>
  </apex:pageBlock>
 </apex:Form> 
</apex:page>