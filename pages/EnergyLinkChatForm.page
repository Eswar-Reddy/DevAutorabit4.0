<apex:page showHeader="false">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet" />
    <style>
        #liveAgentClientChat.liveAgentStateWaiting {
            /* The CSS class that is applied when the chat request is waiting to be accepted */
            /* See "Waiting State" screenshot below */
        }
        
        #liveAgentClientChat {
            /* The CSS class that is applied when the chat is currently engaged */
            /* See "Engaged State" screenshot below */
        }
        
        #liveAgentClientChat.liveAgentStateEnded {
            /* The CSS class that is applied when the chat has ended */
            /* See "Ended State" screenshot below */
        }
        
        body {
            overflow: hidden;
            width: 100%;
            height: 100%;
            padding: 0;
            margin: 0;
        }
        
        body button {
            background: #ffffff;
        }
        
        body, td {
            font-family: "Open Sans", sans-serif;
        }
        
        #waitingMessageWrapper {
            text-align: center;
            display: none;
            font-size: 20px;
            margin-top: 110px;
        }
        
        #waitingMessage {
            opacity: 0.5;
        }
        
        #liveAgentClientChat.liveAgentStateWaiting #waitingMessageWrapper {
            display: block;
        }
        
        #cancelChatButton {
            margin-top: 65px;
           
        }
        
        #cancelChatButton button {
            background-color: #0076be;
            font-size: 14px;
            font-weight: 600;
            color: #ffffff;
            padding: 13px 32px 13px 32px;;
            border: 0;
            cursor:pointer
            
        }
        
        .liveAgentChatInput {
            height: 25px;
            border-width: 1px;
            border-style: solid;
            border-color: #000;
            padding: 2px 0 2px 4px;
            background: #fff;
            display: block;
            width: 99%;
        }
        
        .liveAgentSendButton {
            display: block;
            width: 60px;
            height: 31px;
            padding: 0 0 3px;
            position: absolute;
            top: 0;
            right: -67px;
            cursor:pointer;
        }
        
        #liveAgentChatLog {
            width: auto;
            height: auto;
            top: 0px;
            position: absolute;
            overflow-y: auto;
            left: 0;
            right: 0;
            bottom: 0;
        }
        
        .titleBarWrapper {
            background-color: #0076be;
            margin: 5px 10px 0 5px;
            padding: 5px 0 3px 23px;
            height: 24px;
        }
        
        .titleTextWraper {
            float: left;
            font-size: 18px;
            color: #ffffff;
            font-weight: 400;
        }
        .SaveButtomWrapper .liveAgentChatElement.liveAgentSaveButton,  .EndButtomWrapper .liveAgentChatElement.liveAgentEndButton{
            z-index: 2;
            float: right;
            background-color: #ffffff;
            font-size: 14px;
            font-weight: 600;
            color: #0076be;
            padding: 4px 30px 5px 30px;
            margin: -2px 8px 0 0;
            height: 26px;
            width: 135px;
            border: 0;
            cursor: pointer;
        }
        
        #liveAgentChatLog {
            border: 0;
        }
        
        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .operator, .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .client {
            position: relative;
            padding: 3px 0 5px 65px;
            background-repeat: no-repeat;
            background-size: 50px 50px;
            background-position: left 5px top 5px;
            min-height: 60px;
            margin: 0 5px 0 0;
        }
    
        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .operator {
            background-color: #EFEFEF;
            background-image: url("{!URLFOR($Resource.chatProfileIconOrange)}");
        }

        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .client {
            background-color: #DAEBF6;
            background-image: url("{!URLFOR($Resource.chatProfileIconBlue)}");
        }
        
        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .name, .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .messageText {
            display: block;
            font-size: 14px;
            color: #5e6367;
        }
        
        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .messageText {
            width: 95%;
        }
        
        .timestamp {
            text-align: right;
            font-style: italic;
            color: #5e6367;
            margin: 0 5px 10px 0;
            padding: 0 10px 5px 0;
        }

        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .operator + .timestamp {
            background-color: #EFEFEF;
        }

        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogText .client + .timestamp {
            background-color: #DAEBF6;
        }
        
        .liveAgentChatElement#liveAgentChatLog #liveAgentChatLogTyping {
            color: #5e6367;
            font-size: 14px;
            font-style: italic;
            margin: 0 0 0 65px;
        }
        
        .liveAgentChatInput {
            border: 2px solid #0076be;
            border-radius: 5px;
            height: auto;
            padding: 8px 120px 4px 8px;
            min-height: 38px;
            box-sizing: border-box;
        }
    
        .liveAgentChatElement.liveAgentSendButton {
            right: 15px;
            top: 6px;
            width: 100px;
            background-color: #0076be;
            font-size: 14px;
            font-weight: 600;
            color: #ffffff;
            padding: 0 25px 0 25px;
            height: 25px;
            vertical-align: middle;
            border: 0;
        }
    </style>
    <div style="top: 0; left: 0; right: 0; bottom: 0; position: absolute;">
        <liveAgent:clientChat >
            <div class="titleBarWrapper">
                <div class="titleTextWraper">
                    Chat with SunPower
                </div>
                <div class="EndButtomWrapper">
                    <liveAgent:clientChatEndButton label="end chat"/>
                </div>
                <div class="SaveButtomWrapper">
                    <liveAgent:clientChatSaveButton label="save chat"/>
                </div>
            </div>
            <div style="top: 55px; left: 5px; right: 5px; bottom: 5px; position: absolute; z-index: 0;">
                <liveAgent:clientChatAlertMessage />
                <liveAgent:clientChatStatusMessage />
                <div style="top: 0; right: 0; bottom: 41px; left: 0; padding: 0; position: absolute; word-wrap: break-word; z-index: 0; margin-bottom: 10px;">
                    <div id="waitingMessageWrapper">
                        <div id="waitingMessage">
                            <strong>Please wait while we connect you with an agent.</strong>
                        </div>
                        <div id="cancelChatButton">
                            <liveAgent:clientChatCancelButton label="cancel chat"/>
                        </div>
                    </div>
                    <liveAgent:clientChatLog showTimeStamp="true"/>
                </div>
                <div style="position: absolute; height: auto; right: 0; bottom: 0; left: 0;">
                    <liveAgent:clientChatInput useMultiline="true"/>
                    <liveAgent:clientChatSendButton label="send"/>
                </div>
            </div>
        </liveAgent:clientChat>
    </div>
    <script type='text/javascript'>
        (document.getElementById('liveAgentChatTextArea')).placeholder = 'Type your message...';
    </script>
</apex:page>