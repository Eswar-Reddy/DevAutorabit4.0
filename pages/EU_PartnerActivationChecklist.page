            <apex:outputLabel value="Partner portal Access" style="white-space:nowrap;"/>
            <apex:inputField value="{!acc.Partner_Portal_Access__c}" />
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="SunPower University Access" style="white-space:nowrap;"/>
            <apex:inputField value="{!acc.SunPower_University_Access__c}" />
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="SmartStore Access" style="white-space:nowrap;"/>
            <apex:inputField value="{!acc.SmartStore_Access__c}" />
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="Welcome Kit Ordered" style="white-space:nowrap;"/>
            <apex:inputField value="{!acc.Welcome_Kit_Ordered__c}" />
        </apex:pageBlockSectionItem>
        <apex:pageBlockSectionItem >
            <apex:outputLabel value="Welcome Communication defining customer team in SunPower" style="white-space:wrap;"/>
            <apex:inputField value="{!acc.Welcome_Communication_Customer_Team__c}" />
        </apex:pageBlockSectionItem>
    </apex:PageBlockSection>    
    </apex:pageBlock>
