<apex:page showHeader="true" >  
    
      <center>
        <apex:panelGrid bgcolor="white" columns="1" style="align: center;"> 
          <br/>
          <br/>
              <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="1"> 
                
                  <apex:outputText style="font-size: larger; font-weight: bold;" value="{!$Label.site.error}">      
                   <apex:param value="{!$Site.ErrorMessage}"/>
                   <!-- this parameter needs to be italic in the site.error label -->

                  </apex:outputText>
                  <br/>
                  <apex:outputText value="{!$Site.ErrorDescription}"/>
                  <br/>
                </apex:panelGrid>
                
             
          <br/>
          <apex:messages />
          <br/>
        </apex:panelGrid>
      </center>
   
</apex:page>