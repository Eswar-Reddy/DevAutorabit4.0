<apex:page controller="UploadProofController">

<apex:sectionHeader title="Upload" subtitle="Proof of Completion" />

    <apex:pageMessages />
    <apex:form > 
		<apex:pageBlock >
			<apex:pageBlockSection columns="1">
				<apex:pageBlockSectionItem >
					<apex:outputLabel value="select a File" />
					<apex:inputFile value="{!proof.Body}" filename="{!proof.Name}" /> 
				</apex:pageBlockSectionItem>				
			</apex:pageBlockSection>
			<apex:pageBlockButtons location="bottom" >
				<apex:commandButton value="Upload" disabled="{!OR(ISNULL($CurrentPage.Parameters.Id),isError)}" action="{!saveFile}" />
				<apex:commandButton value="Cancel" action="{!Cancel}" immediate="true" />
			</apex:pageBlockButtons>
		</apex:pageBlock>
	</apex:form>
</apex:page>