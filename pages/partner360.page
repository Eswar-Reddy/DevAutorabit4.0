            <apex:outputField value="{!account.Certification_number_for_minority_owned__c}"/>
            <apex:outputField value="{!account.Certifying_agency_for_woman_owned__c}"/>
            <apex:outputField value="{!account.Certifying_agency_for_minority_owned__c}"/>
            <apex:outputField value="{!account.MQC1_Multi_Quarter_Contract_Participant__c}"/>
            <apex:outputField value="{!account.Monitor_Promotion_Participant__c}"/>
            <apex:outputField value="{!account.MQC2_Multi_Quarter_Contract_Participant__c}"/>
            
            <apex:outputField value="{!account.Partner_Facts__c}"/>
            <apex:outputField value="{!account.Description}"/>
        </apex:pageBlockSection>
        
        <!--------------------------------------------------ADDRESS INFORMATION------------------------------------------------------->
        <apex:pageBlockSection title="Address Information" columns="2" collapsible="false" >
            <apex:pageBlockSectionItem >
                <apex:outputLabel value="Billing Address"/>
                <apex:outputPanel >
                <apex:outputLabel value="{!account.BillingStreet}"/><br/>
                <apex:outputLabel value="{!account.BillingCity}, {!account.BillingState} {!account.BillingPostalCode}"/><br/>
                <apex:outputLabel value="{!account.BillingCountry}"/>
                </apex:outputPanel>
            </apex:pageBlockSectionItem>
            <apex:pageBlockSectionItem >
                <apex:outputLabel value="Shipping Address"/>
                <apex:outputPanel >
                <apex:outputLabel value="{!account.ShippingStreet}"/><br/>
                <apex:outputLabel value="{!account.ShippingCity}, {!account.ShippingState} {!account.ShippingPostalCode}"/><br/>
                <apex:outputLabel value="{!account.ShippingCountry}"/>
                </apex:outputPanel>
            </apex:pageBlockSectionItem>
            <apex:outputField value="{!account.Oracle_County__c}"/>
            <apex:outputField value="{!account.Oracle_Shipping_County__c}"/>
            <apex:pageBlockSectionItem >
                <apex:outputLabel value="GeoLocation"/>
                <apex:outputPanel >
                <apex:outputLabel value="{!account.Geolocation__Latitude__s}{!account.Geolocation__Longitude__s}"/>
                </apex:outputPanel>
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="System Information" columns="2" collapsible="false" >
            <apex:outputField value="{!account.CreatedById}"/>
            <apex:outputField value="{!account.LastModifiedById}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Manage Opportunity Access" columns="1" collapsible="false" >
            <apex:include pageName="ManageOpportunityAccess" />
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Custom Links" columns="3" collapsible="false">
            <apex:outputLink value="/apex/PartnerActivationChecklist?Id={!account.Id}">View Activation Checklist</apex:outputLink>
            <apex:outputLink value="/apex/EU_PartnerActivationChecklist?Id={!account.Id}">View EU Activation Checklist</apex:outputLink>
            <apex:outputLink value="/apex/MDTF_Account?Id={!account.Id}">View DP Fund Program Details</apex:outputLink>
        </apex:pageBlockSection>
        
    </apex:pageBlock>

