            <apex:outputField value="{!account.SunPower_Dealer_WebPage_URL__c}"/>
            <apex:outputField value="{!account.Annual_NPS_Report_Link__c}"/>
            <apex:outputField value="{!account.Warranty_Signed_Italy__c}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Partner Information" columns="2" collapsible="false" >
            <apex:outputField value="{!account.Oracle_Account_Number__c}"/>
            <apex:outputField value="{!account.Bank_Guarantee__c}"/>
            <apex:outputField value="{!account.Online_Order_Access__c}"/>
            <apex:outputField value="{!account.Completed_and_Signed_Credit_Application__c}"/>
            <apex:outputField value="{!account.Partner_Opt_Out_Ok_To_Ship__c}"/>
            <apex:outputField value="{!account.Review_Cycle__c}"/>
            <apex:outputField value="{!account.Credit_Limit__c}"/>
            <apex:outputField value="{!account.Credit_Check__c}"/>
            <apex:outputField value="{!account.Credit_Limit_Date__c}"/>
            <apex:outputField value="{!account.Credit_Hold__c}"/>
            <apex:outputField value="{!account.Net_Terms__c}"/>
            <apex:outputField value="{!account.Next_Credit_Review__c}"/>
