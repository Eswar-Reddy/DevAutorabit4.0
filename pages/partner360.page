        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Partner Ownership" columns="2" collapsible="false" >
            <apex:outputField value="{!account.OwnerId}"/>
            <apex:outputField value="{!account.RSM__c}"/>
            <apex:outputField value="{!account.Primary_PSR__c}"/>
            <apex:outputField value="{!account.CRSM__c}"/>
            <apex:outputField value="{!account.Area_Sales_Manager__c}"/>
            <apex:outputField value="{!account.Commercial_PSR__c}"/>
            <apex:outputField value="{!account.Com_Opp_Recipient_Primary__c}"/>
            <apex:outputField value="{!account.Assigned_PSR_s__c}"/>
            <apex:outputField value="{!account.Opportunity_Recipient__c}"/>
            <apex:outputField value="{!account.Additional_Opportunity_Email_Recipient__c}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Status Information" columns="2" collapsible="false" >
            <apex:outputField value="{!account.Signed_Agreement__c}"/>
            <apex:outputField value="{!account.Promoted_Authorized_Partner_Date__c}"/>
            <apex:outputField value="{!account.Signed_Authorized_SR2_Partner_Agreement__c}"/>
            <apex:outputField value="{!account.Authorized_Partner_Date__c}"/>
            <apex:outputField value="{!account.Signed_Non_Disclosure_Agreement__c}"/>
            <apex:outputField value="{!account.Promoted_Premier_Date__c}"/>
            <apex:outputField value="{!account.Resale_Certificate__c}"/>
            <apex:outputField value="{!account.Promoted_Elite_Partner_Date__c}"/>
            <apex:outputField value="{!account.Signed_and_Notarized_Personal_Guaranty__c}"/>
            <apex:outputField value="{!account.Residential_Installer_since_date__c}"/>
            <apex:outputField value="{!account.Authorized_Sunrise_2_Partner_date__c}"/>
            <apex:outputField value="{!account.Terminated_Date__c}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Lease Vendor Information" columns="2" collapsible="false" >
            <apex:outputField value="{!account.Lease_Program_Partner__c}"/>
            <!--apex:outputField value="{!account.Contractors_License__c}"/-->
            <apex:outputField value="{!account.Oracle_Vendor_Number__c}"/>
            <!--apex:outputField value="{!account.Contractors_Lic_Expiry__c}"/-->
            <apex:outputField value="{!account.Oracle_Vendor_Site_Code__c}"/>
            <!--apex:outputField value="{!account.Insurance_Carrier__c}"/-->
            <apex:outputField value="{!account.Oracle_Vendor_Email__c}"/>
            <!--apex:outputField value="{!account.General_Liability_Exp__c}"/-->
            <apex:outputField value="{!account.Oracle_Warehouse__c}"/>
            <!--apex:outputField value="{!account.Automotive_Exp__c}"/-->
            <apex:outputField value="{!account.Vendor_Subordinate__c}"/>
            <!--apex:outputField value="{!account.Workers_Comp_Exp__c}"/-->
            <apex:outputField value="{!account.Lease_Status_Email_Opt_Out__c}"/>
            <!--apex:outputField value="{!account.Builders_Risk_Exp__c}"/-->
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Lease Vendor Information" collapsible="false">
            <apex:pageBlockTable value="{!brList}" var="br" columnsWidth="450px,450px,450px" width="300%">
                <apex:column value="{!br.State__c}"/>
                <apex:column value="{!br.License_Number__c}"/>
                <apex:column value="{!br.Expires_On__c}"/>
            </apex:pageBlockTable>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Program Participation" columns="2" collapsible="false" >
            <apex:outputField value="{!account.Lease2_0_Program_Partner__c}"/>
