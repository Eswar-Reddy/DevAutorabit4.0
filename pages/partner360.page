            <apex:outputField value="{!account.Country_Domain__c}"/>
            <apex:outputField value="{!account.Specialized_Seller__c}"/>
            <apex:outputField value="{!account.Certified__c}"/><!--Certified Installer-->
            <apex:outputField value="{!account.Line_of_Business__c}"/>
            <apex:outputField value="{!account.Pending_Litigation__c}"/>
            <apex:outputField value="{!account.Specialized_Installer__c}"/>
            <apex:outputField value="{!account.Review_Proposal_Design__c}"/>
            <apex:outputField value="{!account.Status__c}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Partner Attributes" columns="2" collapsible="false" >
            <apex:outputField value="{!account.Name}"/>
            <apex:outputField value="{!account.Primary_Contact__c}"/>
            <apex:outputField value="{!account.Account_Display_Name__c}"/>
            <apex:outputField value="{!account.Email__c}"/>
            <apex:outputField value="{!account.terminated_icon__c}"/>
            <apex:outputField value="{!account.Phone}"/>
            <apex:outputField value="{!account.ParentId}"/>
            <apex:outputField value="{!account.Fax}"/>
            <apex:outputField value="{!account.Partner_Application__c}"/>
