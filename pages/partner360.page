            <apex:outputField value="{!account.RSM_Discretionary_Adj__c}"/>
            <apex:outputField value="{!account.Executives_view_all_Opportunities__c}"/>
            <apex:outputField value="{!account.Dealer_Score_Total__c}"/>
            <apex:outputField value="{!account.Dealer_Score_Summary__c}"/>
        </apex:pageBlockSection>
        
        <apex:pageBlockSection title="Additional Information" columns="2" collapsible="false" >
            <apex:outputField value="{!account.MultiQuarter_Contract_Participant__c}"/>
            <apex:outputField value="{!account.ACBParanet_ID__c}"/>
            <apex:outputField value="{!account.Woman_Owned_Business__c}"/>
            <apex:outputField value="{!account.Underrepresented_Minority_Owned_Business__c}"/>
