<apex:page controller="CreatePartnerAccount" showHeader="true" sidebar="true" tabStyle="Partner_Application__c">
   <apex:form id="form1">
    <apex:sectionHeader title="Partner Information"/>
    <apex:pageMessages />
    <apex:pageBlock id="block1">
        <apex:pageBlockButtons id="blockButton1">
            <apex:commandButton value="Confirm" action="{!confirm}"/>
            <apex:commandButton value="Cancel" action="{!cancel}"/>
        </apex:pageBlockButtons>
        <apex:outputPanel id="errorPanel" StyleClass="pbError">
                {!errorMessage}
         </apex:outputPanel> 
         <apex:inputCheckbox id="chkCreateAccount"  value="{!isCreateAccount}"/>
         <apex:outputLabel value="Create an account with the following information"></apex:outputLabel>
         <br/>
         <br/>
        <apex:pageBlockSection id="pageBlockSection1" columns="2">
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="compName" value="Company Name"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Company_Name__c}" id="compName"/>
             </apex:pageBlockSectionItem>  
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="phone" value="Phone"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Phone__c}" id="phone"/>
             </apex:pageBlockSectionItem> 
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="website" value="WebSite"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Website__c}" id="website"/>
             </apex:pageBlockSectionItem> 
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="emoployees" value="Employees"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Employees__c}" id="emoployees"/>
             </apex:pageBlockSectionItem> 
            
             <!--//Start for Case#00215703 -Populate Account with RSM,CRSM,AreaSalesManager from Partner Account-->
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="CRSM" value="CRSM"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.CRSM__r.FirstName+' '+partner.CRSM__r.LastName}" id="crsm"/>
             </apex:pageBlockSectionItem>
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="RSM" value="RSM"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.RSM__r.FirstName+' '+partner.RSM__r.LastName}" id="rsm"/>
             </apex:pageBlockSectionItem>
             
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="Area_Sales_Manager" value="Area Sales Manager"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Area_Sales_Manager__r.FirstName+' '+partner.Area_Sales_Manager__r.LastName}" id="areaSalesManager"/>
              </apex:pageBlockSectionItem>
              <!--//Start for Case#00215703--> 
            <apex:pageBlockSectionItem />
            <apex:pageBlockSectionItem />
            <apex:pageBlockSectionItem />
            
            <!-- START - Case 00618830 - Additional Bill To and Ship To Site Address -->
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="BillToSt" value="Billing Street"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Address__c}" id="BillToSt"/>
             </apex:pageBlockSectionItem>    
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="ShipToSt" value="Shipping Street"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Ship_To_Street__c}" id="ShipToSt"/>
             </apex:pageBlockSectionItem>
            
             <apex:pageBlockSectionItem >      
                   <apex:outputLabel for="BillToCity" value="Billing City"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.City__c}" id="BillToCity"/> 
             </apex:pageBlockSectionItem>
            
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="ShipToCity" value="Shipping City"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Ship_To_City__c}" id="ShipToCity"/>
             </apex:pageBlockSectionItem>     
             
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="BillToState" value="Billing State"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.State__c}" id="BillToState"/> 
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="ShipToState" value="Shipping State"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Ship_To_State__c}" id="ShipToState"/> 
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="BillToCountry" value="Billing Country"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Country__c}" id="BillToCountry"/> 
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="ShipToCountry" value="Shipping Country"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Ship_To_Country__c}" id="ShipToCountry"/> 
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="BillToPostal" value="Billing Postal Code"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Zip__c}" id="BillToPostal"/> 
            </apex:pageBlockSectionItem>
            
            <apex:pageBlockSectionItem >
                   <apex:outputLabel for="ShipToPostal" value="Shipping Postal Code"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Ship_To_Postal_Code__c}" id="ShipToPostal"/> 
            </apex:pageBlockSectionItem>

        </apex:pageBlockSection>
        <br/>
        <apex:inputCheckbox id="chkCreateContact" value="{!isCreateContact}" />
         <apex:outputLabel value="Create a contact with the following information: "></apex:outputLabel>
         <br/>
         <br/>
         <apex:pageBlockSection > 
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="title" value="Title"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Title__c}" id="title"/>
             </apex:pageBlockSectionItem> 
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="phone" value="Phone"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Phone__c}" id="phone"/>
              </apex:pageBlockSectionItem> 
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="fname" value="First Name"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.First_Name__c}" id="fname"/>
             </apex:pageBlockSectionItem>  
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="mobile" value="Mobile"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Mobile__c}" id="mobile"/>
              </apex:pageBlockSectionItem> 
               <apex:pageBlockSectionItem >
                   <apex:outputLabel for="lname" value="Last Name"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Last_Name__c}" id="lname"/>
             </apex:pageBlockSectionItem> 
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="fax" value="Fax"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Fax__c}" id="fax"/>
              </apex:pageBlockSectionItem> 
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="MailingStreet" value="Mailing Street"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Address__c}" id="MailingStreet"/>
             </apex:pageBlockSectionItem>  
             <apex:pageBlockSectionItem >
                   <apex:outputLabel for="email" value="Email"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Email__c}" id="email"/>
              </apex:pageBlockSectionItem> 
              <apex:pageBlockSectionItem >
                   <apex:outputLabel for="MailingCity" value="Mailing City"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.City__c}" id="MailingCity"/>
             </apex:pageBlockSectionItem>
             <apex:pageBlockSectionItem >      
                   <apex:outputLabel for="MailingState" value="Mailing State"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.State__c}" id="MailingState"/> 
             </apex:pageBlockSectionItem>
              <apex:pageBlockSectionItem >
                   <apex:outputLabel for="MailingCountry" value="Mailing Country"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Country__c}" id="MailingCountry"/>
              </apex:pageBlockSectionItem>     
              <apex:pageBlockSectionItem >
                   <apex:outputLabel for="MailingPostalCode" value="Mailing Postal Code"></apex:outputLabel>
                   <apex:outputLabel value="{!partner.Zip__c}" id="MailingPostalCode"/> 
             </apex:pageBlockSectionItem>
 
        </apex:pageBlockSection>
  </apex:pageBlock>
 </apex:form>           
</apex:page>