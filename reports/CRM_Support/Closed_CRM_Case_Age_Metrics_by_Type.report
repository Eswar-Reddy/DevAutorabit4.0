    <currency>USD</currency>
    <description>This report breaks down all closed CRM cases this month and the previous month by type. It reports on the average case age.</description>
    <filter>
        <criteriaItems>
            <column>CLOSED</column>
            <operator>equals</operator>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <column>RECORDTYPE</column>
            <operator>equals</operator>
            <value>Case.CRM_Case</value>
        </criteriaItems>
        <criteriaItems>
            <column>TYPE</column>
            <operator>notEqual</operator>
            <value>Change Request,Fast Track</value>
        </criteriaItems>
        <criteriaItems>
            <column>SUBJECT</column>
