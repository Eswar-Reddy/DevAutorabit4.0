<messaging:emailTemplate subject="{!relatedTo.Primary_Contact_First_Name__c}, meet your SunPower Partner!" recipientType="Contact" relatedToType="Opportunity">
<messaging:htmlEmailBody >
<html>
    <style type="text/css">
    body {
        background-color: #FFFFFF;
        margin-left: 0px;
