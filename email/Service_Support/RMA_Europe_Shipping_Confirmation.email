<messaging:emailTemplate subject="{!$Label.RMA_Email_Shipment_Confirmation_for_Case} {!relatedTo.Case__r.CaseNumber}" recipientType="Contact" relatedToType="RMA__c" 
language="{!relatedTo.Attention_To_Language_Code__c}">
<messaging:htmlEmailBody >
<html>
    <body>
        <!-- Outer Wrapper -->
        <table style="display: inline-table;" align="center" border="0" cellpadding="0" cellspacing="0" width="700">
            <!--Header Wrapper -->                  
            <tr>
                <!-- SPWR Header Logo NA in PROD -->
                <td width="700px"><img src="https://c.na29.content.force.com/servlet/servlet.ImageServer?id=01580000001jlOt&oid=00D80000000ZF1L&lastMod=1395962868000" width="960px"/></td>
            </tr>
            
            <!-- Message Content -->
            <tr>
                <td align="left" valign="top" bgcolor="#FFFFFF" width="960px;" style="text-decoration:none; outline:none;">
                    <table width="960px;">
                        <tr>
                            <td width="700px" style="padding-left:50px;">                 
                                <p style="margin-top:20px">{!$Label.RMA_Email_Hello} {!relatedTo.Attention_to__c},</p>
                                <p style="margin-right:20px">
                                    {!$Label.RMA_Email_Please_be_informed_that_replacement}
                                </p>
                                
                                <!--Table-->
                                <table width="98%" cellspacing="0" style="border-collapse:collapse;border-style:solid;border-width:1px;border-color:#FDB723;border-spacing:0;">
                                <tr>
                                    <td style="background: #FDB723;padding-left:21px; padding-top:11px;padding-bottom: 11px;">
                                        <span style="font-size:16px;font-weight:bold;">{!$Label.RMA_Email_RMA_Details}</span>
                                    </td>
                                </tr>
                                <tr style="vertical-align:top;">
                                    <td style="padding-top:20px;padding-right:30px;"> 
                                        <ul>
                                         <li>
                                            <p> 
                                                {!$Label.RMA_Email_Case_Number}: {!relatedTo.Case__r.CaseNumber}  <br/> 
                                            </p>
                                          </li> 
                                          <li>
                                            <p> 
                                                {!$Label.RMA_Email_Case_Subject}: {!relatedTo.Case__r.Subject}  <br/> 
                                            </p>
                                          </li> 
                                          <li>
                                            <p> 
                                                {!$Label.RMA_Email_RMA_Number}: {!relatedTo.Name}  <br/> 
                                            </p>
                                          </li> 
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_Customer_Name}: {!relatedTo.Case__r.Account.Name} <br/>    
                                            </p>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_RMA_Replacement}: {!relatedTo.Replacement_SO__c} <br/>    
                                            </p>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_RMA_Replacement_Item}: <br/>    
                                            </p>
                                            <table>
                                                <tr>
                                                    <th style="width:10%">{!$Label.RMA_Email_Item_SKU}</th>
                                                    <th style="width:80%">{!$Label.RMA_Email_Item_Description}</th>
                                                    <th style="width:10%">{!$Label.RMA_Email_Item_Quantity}</th>
                                                </tr>
                                                <apex:repeat value="{!relatedTo.RMA_Line_Items__r}" var="LI">
                                                    <apex:outputPanel rendered="{!LI.Type__c = 'Replacement'}">
                                                    <tr>
                                                        <td style="padding-right:10px;"><apex:outputField value="{!LI.Name}"/></td>    
                                                        <td style="padding-right:10px;"><apex:outputField value="{!LI.Item_Description__c}"/></td>    
                                                        <td style="text-align:center;"><apex:outputField value="{!LI.Shipped_Quantity__c}"/></td>    
                                                    </tr>
                                                    </apex:outputPanel>
                                                </apex:repeat>
                                            </table>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_RMA_Return}: {!relatedTo.Return_SO__c} <br/>    
                                            </p>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_RMA_Return_Item}: <br/>    
                                            </p>
                                            <table>
                                                <tr>
                                                    <th style="width:10%">{!$Label.RMA_Email_Item_SKU}</th>
                                                    <th style="width:80%">{!$Label.RMA_Email_Item_Description}</th>
                                                    <th style="width:10%">{!$Label.RMA_Email_Item_Quantity}</th>
                                                </tr>
                                                <apex:repeat value="{!relatedTo.RMA_Line_Items__r}" var="LI">
                                                    <apex:outputPanel rendered="{!LI.Type__c = 'Return'}">
                                                    <tr>
                                                        <td style="padding-right:10px;"><apex:outputField value="{!LI.Name}"/></td>    
                                                        <td style="padding-right:10px;"><apex:outputField value="{!LI.Item_Description__c}"/></td>    
                                                        <td style="text-align:center;"><apex:outputField value="{!LI.Received_Quantity__c}"/></td>    
                                                    </tr>
                                                    </apex:outputPanel>
                                                </apex:repeat>
                                            </table>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_Planned_delivery_date}:&nbsp; <apex:outputField value="{!relatedTo.Delivery_Date_of_Replacement_unit_s__c}"/><br/>     
                                            </p>
                                          </li>
                                          <li>       
                                            <p> 
                                                {!$Label.RMA_Email_Ship_to_Address}: {!relatedTo.Shipping_Address__c},{!relatedTo.Shipping_Address2__c} {!relatedTo.Shipping_City__c} {!relatedTo.Shipping_State_Province__c}, {!relatedTo.Shipping_Zip_Postal_Code__c} {!relatedTo.Shipping_Country__c}  <br/>     
                                            </p>
                                          </li>
                                        </ul>
                                    </td>
                                </tr>
                                </table>
                                <p  style="margin-top:20px">
                                    {!$Label.RMA_Email_IMPORTANT}: {!$Label.RMA_Email_Please_confirm_back}
                                </p>
                                <p  style="margin-top:20px">
                                  <apex:outputPanel rendered="{!NOT(AND(OR(language = 'fr', language = 'nl'), relatedTo.Case__r.Region__c = 'SPBE'))}">
                                    <b> <a href="mailto:{!$Label.RMA_Email_Europe_Email}" target="_blank"> {!$Label.RMA_Email_Europe_Email} </a> </b>  
                                  </apex:outputPanel>  
                                  <apex:outputPanel rendered="{!AND(OR(language = 'fr', language = 'nl'), relatedTo.Case__r.Region__c = 'SPBE')}">
                                    <b> <a href="mailto:{!$Label.RMA_Email_Europe_Email_Belgium}" target="_blank"> {!$Label.RMA_Email_Europe_Email_Belgium} </a> </b>  
                                  </apex:outputPanel>  
                                </p>
                                <p  style="margin-top:20px">
                                    <br>{!$Label.Regards} </br>
                                    <b>{!$Label.RMA_Email_SunPower_RMA_Team}</b>
                                </p>
                                <!-- Breaks are added to ensure Image and Text alignment at the top -->
                                <br/><br/><br/>                  
                            </td>
                        </tr>
                    </table>    
                </td>    
            </tr>
        </table>
    </body>
       <style type="text/css">
            body {
                background-color: #FFFFFF;
                margin-left: 0px;
                margin-top: 0px;
                margin-right: 0px;
                margin-bottom: 0px;
                font-family: Calibri, Arial, Futura;
                color: #555555;
            }
            p,
            li,
            h1,
            h2,
            h3,
            h4,
            h5, 
            table {
                margin-top: 0pt;
            }
            p,table{
                font-size: 11pt;
            }
            a { color:#0070c0; text-decoration:none}
            a:visited { color:#0070c0; text-decoration:none}
            a:link { color:#0070c0; text-decoration:none}
            a:hover { color:#0070c0; text-decoration:none}

            li {
                line-height:20px;
                margin-bottom: 10pt;
                display: list-item;
                padding-bottom:5px;
            }
        </style>
</html>
</messaging:htmlEmailBody></messaging:emailTemplate>